@model Login
<form method="post">
    <div>
        <h3>Вход</h3>
    </div>

    <div class="text-danger" font-weight-bold asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <div class="col-6">
            <label asp-for="UserName"></label><br />
            <input class="form-control"  asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label>Запомнить меня!</label>
            <input class="form-control" type="checkbox" name="rememberMe" />

            <a class="form-control" href="/account/register">Регистрация</a>
        </div>
    </div>

    <div>
        <button type="submit" asp-controller="Account" asp-action="Login">Войти</button>
    </div>

</form>