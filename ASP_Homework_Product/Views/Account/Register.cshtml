@model Register
<form method="post">
    <div>
        <h3>Регистрация</h3>
    </div>

    <div class="text-danger" font-weight-bold asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <div class="col-6">
            <label asp-for="UserName">Введите имя</label><br />
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="Password">Введите пароль</label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="ConfirmPassword">Еще раз введите пароль</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div>
        <button type="submit" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
    </div>

</form>