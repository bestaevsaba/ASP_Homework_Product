@model List<Order>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <div class="row">
            <h3>Список заказов</h3>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>сумма</th>
                        <th>статус</th>
                        <th>Дата</th>
                        <th>Время</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model?.Count; i++)
                    {
                        <tr>
                            <td>@(1 + i)</td>
                            <td>@Model[i].Cost</td>
                            <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                            <td>@Model[i].CreateDateTime.ToString("d")</td>
                            <td>@Model[i].CreateDateTime.ToString("t")</td>
                            <td><a href="/admin/orderDetails?orderId=@Model[i].Id">Подробнее</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>